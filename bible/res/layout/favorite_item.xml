<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/SelectionColor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/love"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/normal"
        android:gravity="end|start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textVerse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is som"
            android:textColor="#000000"
            android:textSize="@dimen/font_size_mid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|start" >

            <TextView
                android:id="@+id/textReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|start"
                android:text="Gen 10:10"
                android:textColor="#FF0000"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="12/12/15"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
